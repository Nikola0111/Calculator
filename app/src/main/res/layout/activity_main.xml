<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtEquasion"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:maxLines="2"
        android:textColor="#fff"
        android:textSize="36sp"
        android:textAlignment="viewEnd"
        >
    </TextView>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:maxLines="2"
        android:textSize = "50sp"
        android:textColor="#fff"
        android:textAlignment="viewEnd">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnCE"
            style="@style/actionButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="CE"
            android:onClick="actionClear">

        </Button>

        <Button
            android:id="@+id/btnLeft"
            style="@style/actionButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="("
            android:onClick="actionLeft">

        </Button>

        <Button
            android:id="@+id/btnRight"
            style="@style/actionButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=")"
            android:onClick="actionRight">

        </Button>

        <Button
            android:id="@+id/btnDiv"
            style="@style/actionButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="/"
            android:onClick="actionDiv">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn7"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:onClick="action7">

        </Button>

        <Button
            android:id="@+id/btn8"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:onClick="action8">

        </Button>

        <Button
            android:id="@+id/btn9"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:onClick="action9">

        </Button>

        <Button
            android:id="@+id/btnMul"
            style="@style/actionButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="*"
            android:onClick="actionMul">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn4"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:onClick="action4">

        </Button>

        <Button
            android:id="@+id/btn5"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:onClick="action5">

        </Button>

        <Button
            android:id="@+id/btn6"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:onClick="action6">

        </Button>

        <Button
            android:id="@+id/btnAdd"
            style="@style/actionButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:onClick="actionAdd">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn1"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:onClick="action1">

        </Button>

        <Button
            android:id="@+id/btn2"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:onClick="action2">

        </Button>

        <Button
            android:id="@+id/btn3"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:onClick="action3">

        </Button>

        <Button
            android:id="@+id/btnMinus"
            style="@style/actionButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:onClick="actionSub">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnDot"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="."
            android:onClick="actionDot">

        </Button>

        <Button
            android:id="@+id/btn0"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:onClick="action0">

        </Button>

        <ImageButton
            android:id="@+id/btnDel"
            style="@style/numberButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src = "@drawable/ic_backspace"
            android:scaleType="center"
            android:onClick="actionDel">

        </ImageButton>

        <Button
            android:id="@+id/btnEq"
            style="@style/actionButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="="
            android:onClick="actionCalc">

        </Button>
    </LinearLayout>
</LinearLayout>